<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Saved Rows</title>
</head>
<body>
<div class="container mt-5">
    <h2 class="mb-4">Saved Rows</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Bleu</th>
                <th>Rouge</th>
                <th>llm</th>
                <th>CIDEr</th>
                <th>Captions</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < savedRows.length; i++) { %>
                <tr>
                    <td><%= savedRows[i].Bleu %></td>
                    <td><%= savedRows[i].Rouge %></td>
                    <td><%= savedRows[i].llm %></td>
                    <td><%= savedRows[i].CIDEr %></td>
                    <td><%= savedRows[i].caption %></td>
                    <td>
                        <form action="/remove" method="POST">
                            <input type="hidden" name="index" value="<%= i %>">
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <a href="/" class="btn btn-secondary mt-4">Back to Table</a>
</div>
</body>
</html>
